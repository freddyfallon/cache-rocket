{
  "name": "cache-rocket",
  "version": "1.0.0",
  "description": "ðŸš€ Supercharge your Turborepo builds with a blazing-fast remote cache server",
  "main": "dist/start/index.js",
  "scripts": {
    "build": "pnpm run clean && pnpm run build:start && pnpm run build:post",
    "build:start": "ncc build src/launch-server.ts -o dist/start",
    "build:post": "ncc build src/cleanup-server.ts -o dist/post",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "portfinder": "^1.0.37",
    "turborepo-remote-cache": "^2.6.1",
    "wait-port": "^1.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freddyfallon/cache-rocket"
  },
  "keywords": [
    "github-action",
    "turborepo",
    "remote-cache",
    "typescript",
    "performance",
    "build-acceleration",
    "caching"
  ],
  "author": "freddy.fallon",
  "license": "MIT"
}
